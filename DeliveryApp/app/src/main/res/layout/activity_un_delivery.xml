<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="match_parent"
                  android:background="@color/bg_login"
                  android:orientation="vertical"
                  android:padding="@dimen/padding" >



            <LinearLayout
                android:id="@+id/main_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_main1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/lay_padding"
                    android:paddingRight="@dimen/lay_padding_right"
                    android:paddingLeft="@dimen/lay_padding_left"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/reason_lay1"
                        android:layout_width="@dimen/main_width"
                        android:layout_height="@dimen/main_height"
                        android:background="@color/bg_menu"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imag_reasion"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:src="@drawable/reason"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/txt_margin_top"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/bg_white"
                            android:text="@string/reason"
                            android:textSize="@dimen/txt_main_size"/>
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/view_width"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/bg_login">

                    </View>

                    <LinearLayout
                        android:id="@+id/image_lay2"
                        android:layout_width="@dimen/main_width"
                        android:layout_height="@dimen/main_height"
                        android:background="@color/bg_menu"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imag_re_pic"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:src="@drawable/camera"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/txt_margin_top"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/bg_white"
                            android:text="@string/undelivered_proof"
                            android:textSize="@dimen/txt_main_size"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_main2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/lay_padding_right"
                    android:paddingLeft="@dimen/lay_padding_left"
                    android:padding="@dimen/lay_padding"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/remarks_lay3"
                        android:layout_width="@dimen/main_width"
                        android:layout_height="@dimen/main_height"
                        android:background="@color/bg_menu"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imag_remark"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:src="@drawable/remark"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/txt_margin_top"
                            android:gravity="center"
                            android:text="@string/remark"
                            android:textStyle="bold"
                            android:textColor="@color/bg_white"
                            android:textSize="@dimen/txt_main_size"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/view_width"
                        android:layout_height="@dimen/view_height"
                        android:background="@color/bg_login">

                    </View>
                    <LinearLayout
                        android:id="@+id/ll_complete"
                        android:layout_width="@dimen/main_width"
                        android:layout_height="@dimen/main_height"
                        android:background="@color/bg_menu"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_complete"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_marginLeft="@dimen/margin_left"
                            android:src="@drawable/checkmark"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/txt_margin_top"
                            android:gravity="center"
                            android:text="@string/complete"
                            android:textStyle="bold"
                            android:textColor="@color/bg_white"
                            android:textSize="@dimen/txt_main_size"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

    </LinearLayout>


