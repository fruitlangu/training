<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:padding="@dimen/cal_padding"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/distri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/boon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@mipmap/ic_launcher" />

                <android.widget.TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_toRightOf="@+id/boon"
                    android:gravity="center_horizontal|left"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:text="@string/select_phone_no"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/activity_call_title" />
            </LinearLayout>





        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/rl"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:paddingBottom="15dp"
                />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <RadioButton
                    android:id="@+id/rb_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Number"
                    android:paddingRight="15dp"
                    />
                <RadioButton
                    android:id="@+id/rb_alternate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alternate Number"
                    android:paddingRight="15dp" />
                <RadioButton
                    android:id="@+id/rb_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shipping Number"
                    android:paddingRight="15dp" />
                <RadioButton
                    android:id="@+id/rb_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch Number"
                    android:paddingRight="15dp" />
                <RadioButton
                    android:id="@+id/rb_groupleader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group Leader Number"
                    android:paddingRight="15dp" />
            </RadioGroup>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_horizontal_txt"
            android:background="@color/bgpd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/proceed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.0"
                android:visibility="gone"
                android:textStyle="bold"
                android:background="@color/call"
                android:text="Call"
                android:textColor="@color/dark_white" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
