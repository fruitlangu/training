<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    android:padding="@dimen/ord_padding">
    <!--android:background="#e9e9e9"-->
    <LinearLayout
        android:id="@+id/par_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9e9e9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/ord_padding_bottom">

            <TextView
                android:id="@+id/tv_deliveryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ord_title_margin"
                android:text="@string/prat_title"
                android:textColor="@color/textblack"
                android:textSize="@dimen/ord_txt_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/ord_pad_bottom">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000453671"
                android:textColor="@color/textblack"
                android:textSize="@dimen/ord_txt_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ord_padding_left"
                android:text="-"
                android:textColor="@color/textblack"
                android:textSize="@dimen/ord_txt_size" />

            <TextView
                android:id="@+id/tv_shipping_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ord_padding_left"
                android:text="1119896245"
                android:textColor="@color/textblack"
                android:textSize="@dimen/ord_txt_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/per_infobutton"
        android:layout_below="@+id/par_title">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <LinearLayout
                android:id="@+id/sub_lay1"
                android:layout_width="0dp"
                android:layout_height="@dimen/linear_height"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_custname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_margin_top"
                    android:gravity="center"
                    android:text="John Doe"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_margin_top"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_main_size" />
            </LinearLayout>
            <!--<TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@color/colorAccent"
                android:text="Tile1" />-->
            <LinearLayout
                android:id="@+id/sub_lay2"
                android:layout_width="0dp"
                android:layout_height="@dimen/linear_height"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_cust_phno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_margin_top"
                    android:gravity="center"
                    android:text="1234567890"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_margin_top"
                    android:gravity="center"
                    android:text="@string/phnumber"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_main_size" />
            </LinearLayout>
            <!-- <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@color/colorPrimaryDark"
                android:text="Tile2" />-->

            <!--  <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@color/colorPrimary"
                android:text="Tile3" />-->
            <LinearLayout
                android:id="@+id/sub_lay3"
                android:layout_width="0dp"
                android:layout_height="@dimen/linear_height"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_margin_top"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Somewhere in this planet"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_margin_top"
                    android:gravity="center"
                    android:text="Address"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_main_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_lay4"
                android:layout_width="0dp"
                android:layout_height="@dimen/linear_height"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imag_name"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:src="@drawable/photocamera" />


            </LinearLayout>

        </GridLayout>

    </LinearLayout>


    <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/par_title"
        android:layout_above="@+id/per_infobutton"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/part_del"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>-->
<LinearLayout
    android:id="@+id/ll_checkbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/per_infobutton">
    <CheckBox
        android:id="@+id/cb_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvpickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Completed"
        android:textColor="@color/black"
        android:textStyle="bold"/>
