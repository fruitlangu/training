<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/dark_white"
        card_view:cardCornerRadius="1dp"
        android:layout_margin="5dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/lin_image"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/pen_margintop">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pen_pading_left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/pen_pading_left"
                    android:paddingBottom="5dp">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/chk_single"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text=""/>

                    <TextView
                        android:layout_width="@dimen/pa_width"
                        android:layout_height="wrap_content"
                        android:text="@string/orderno"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/pen_txt_size"
                        android:textColor="@color/textblack"/>
                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QWERTY1235567"
                        android:maxLines="2"
                        android:layout_marginLeft="@dimen/pen_margin_left_name"
                        android:textSize="@dimen/pen_txt_size"
                        android:textColor="@color/textblack"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/pen_pading_left"
                    android:weightSum="2"
                    android:paddingBottom="5dp">
                    <android.support.v7.widget.AppCompatCheckBox
                       android:visibility="invisible"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text=""/>
                    <TextView
                        android:layout_width="@dimen/pa_width"
                        android:layout_height="wrap_content"
                        android:text="@string/shipmentno"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/pen_txt_size"
                        android:layout_weight="1"
                        android:textColor="@color/textblack"/>
                    <TextView
                        android:id="@+id/tv_shipment_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QWERTY1235567"
                        android:maxLines="2"
                        android:textSize="@dimen/pen_txt_size"
                        android:textColor="@color/textblack"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/pen_margin_left_name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pen_pading_left"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatCheckBox
                        android:visibility="invisible"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text=""/>

                    <TextView
                        android:layout_width="@dimen/pa_width"
                        android:layout_height="wrap_content"
                        android:text="@string/cusname"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/pen_txt_size"
                        android:layout_weight="1"
                        android:textColor="@color/textblack"/>
                    <TextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mr.John Doe"
                        android:textSize="@dimen/pen_txt_size"
                        android:textColor="@color/textblack"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/pen_margin_left_name"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>