<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <!-- product code-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ord_call_image_height"
            android:orientation="horizontal"
            android:background="@drawable/product_bg">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:layout_weight=".1" >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/product_code"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_weight=".1" >

                    <TextView
                        android:id="@+id/ps_product_code"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="1122345 "
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    <ImageView
        android:id="@+id/iv_pickup_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="right|top"
        android:adjustViewBounds="true"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:src="@drawable/return_arrow" />
</FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ord_view_height"
            android:background="@color/bg_white"/>
        <!-- product Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/product_bg">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:layout_weight=".1" >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/product_name"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_weight=".1" >

                    <TextView
                        android:id="@+id/ps_product_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Toshiba Tv"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ord_view_height"
            android:background="@color/bg_white"/>
        <!-- product Qty-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ord_call_image_height"
            android:orientation="horizontal"
            android:background="@drawable/product_bg">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:layout_weight=".1" >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/product_qty"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_weight=".1" >

                    <TextView
                        android:id="@+id/ps_product_qty"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="1 "
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/deli_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ord_view_height"
            android:visibility="gone"
            android:background="@color/bg_white"/>
        <!-- product Qty-->
        <LinearLayout
            android:id="@+id/deli_view_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ord_call_image_height"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/product_bg">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:layout_weight=".1" >
                    <TextView
                        android:id= "@+id/tv_delivered_qty"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/delivery_qty"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:layout_weight=".1" >

                    <TextView
                        android:id="@+id/ps_delivery_qty"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="1 "
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/ord_padding_left"
                        android:gravity="center|left"
                        android:textSize="@dimen/ord_txt_size"
                        android:textColor="@color/textblack"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
