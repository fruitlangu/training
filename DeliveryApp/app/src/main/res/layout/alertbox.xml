<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/distri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/boon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@mipmap/ic_launcher" />

            <android.widget.TextView
                android:textSize="@dimen/activity_vertical_title"
                android:textColor="@color/textblack"
                android:gravity="left"
                android:id="@+id/txt_title"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/select_retailer"
                android:layout_toRightOf="@+id/boon"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <android.widget.TextView
            android:textSize="@dimen/activity_vertical_margin"
            android:textColor="@color/textblack"
            android:gravity="center|left"
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_txt"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/retailer_name"
            android:maxLines="3" />
        <View
            android:background="@color/bgpd"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/activity_horizontal_txt" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textColor="@color/textblack"
                android:id="@+id/close"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="cancel"
                android:layout_weight="1.0" />
            <View
                android:background="@color/backgr"
                android:layout_width="1dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="@color/bg_main"
                android:id="@+id/proceed"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Remove"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
