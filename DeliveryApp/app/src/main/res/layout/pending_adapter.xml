<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">


	<android.support.v7.widget.CardView
		android:id="@+id/card_view"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardBackgroundColor="@color/dark_white"
		card_view:cardCornerRadius="1dp"
		android:layout_margin="5dp"
		card_view:cardElevation="1dp"
		card_view:cardUseCompatPadding="true">

		<!--<FrameLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/widget_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >-->

			<ImageView
				android:id="@+id/iv_pickup_icon"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_gravity="top|right"
				android:adjustViewBounds="true"
				android:visibility="gone"
				android:layout_marginLeft="5dp"
				android:scaleType="fitStart"
				android:src="@drawable/return_arrow" />

		<!--</FrameLayout>-->

		<!--	<ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />
            <Button
                android:id="@+id/filter"
                style="@style/Widget.Button.White.BlueText.BlueText.FrameImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Filter" />-->

		<LinearLayout
				android:id="@+id/lin_image"
				android:layout_width="fill_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:paddingTop="@dimen/pen_margintop">

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight=".2"
				android:layout_gravity="center"
				android:orientation="vertical"
				android:paddingLeft="@dimen/pen_pading_left">

			<LinearLayout
				android:layout_width="wrap_content"
				android:weightSum="2"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/pen_pading_left"
				android:paddingBottom="5dp">

				<TextView
					android:layout_width="@dimen/pa_width"
					android:layout_height="wrap_content"
					android:text="@string/orderno"
					android:textStyle="bold"
					android:layout_marginLeft="2dp"
					android:textSize="@dimen/pen_txt_size"
					android:textColor="@color/textblack"/>
				<TextView
					android:id="@+id/tv_order_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="QWERTY1235567"
					android:maxLines="2"
					android:layout_marginLeft="@dimen/pen_margin_left_name"
					android:textSize="@dimen/pen_txt_size"
					android:textColor="@color/textblack"
					/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/pen_pading_left"
				android:weightSum="2"
				android:paddingBottom="5dp">
				<TextView
					android:layout_width="@dimen/pa_width"
					android:layout_height="wrap_content"
					android:text="@string/shipmentno"
					android:textStyle="bold"
					android:textSize="@dimen/pen_txt_size"
					android:layout_weight="1"
					android:textColor="@color/textblack"/>
				<TextView
					android:id="@+id/tv_shipment_id"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="QWERTY1235567"
					android:maxLines="2"
					android:textSize="@dimen/pen_txt_size"
					android:textColor="@color/textblack"
					android:layout_weight="1"
					android:layout_marginLeft="@dimen/pen_margin_left_name"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/pen_pading_left"
				android:weightSum="2"
				android:orientation="horizontal">

				<TextView
					android:layout_width="@dimen/pa_width"
					android:layout_height="wrap_content"
					android:text="@string/cusname"
					android:textStyle="bold"
					android:textSize="@dimen/pen_txt_size"
					android:layout_weight="1"
					android:textColor="@color/textblack"/>
				<TextView
					android:id="@+id/tv_customer_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Mr.John Doe"
					android:textSize="@dimen/pen_txt_size"
					android:textColor="@color/textblack"
					android:layout_weight="1"
					android:layout_marginLeft="@dimen/pen_margin_left_name"/>
			</LinearLayout>


		</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="@dimen/cir_lef">

				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/cv_profile_image"
					android:layout_width="@dimen/cri_image_width"
					android:layout_height="@dimen/cri_image_hight"
					android:src="@drawable/deliver"
					app:civ_border_width="2dp"
					app:civ_border_color="@color/textblack"/>
				<!--xmlns:app="http://schemas.android.com/apk/res-auto"-->

			</LinearLayout>
	</LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>