<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgr">
                <TextView
                    android:id="@+id/tv_shipid"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Shipment Number"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
<LinearLayout
    android:id="@+id/ll_header"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="FUNCTIONS"
        android:textStyle="bold"
        android:textColor="#000"/>
</LinearLayout>
<!--    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header"
        android:id="@+id/listview"/>-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_attributes"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_header"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/rv_attributes"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="DOCUMENTS"
        android:textStyle="bold"
        android:textColor="#000"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_document_attributes"
                android:layout_width="match_parent"
                android:layout_below="@+id/ll_header"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_below="@+id/rv_attributes"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Customer Feedback Process"
                android:textStyle="bold"
                android:textColor="#000"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Did the engineer fixed prior appointment with the customer for demo &amp; installation?"/>

                <RadioGroup
                    android:id="@+id/rg_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_appointment_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"/>

                    <RadioButton
                        android:id="@+id/rb_appointment_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_simple_manner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Did the engineer explained in detail about the product functions and usage in a simple manner?"/>

                <RadioGroup
                    android:id="@+id/rg_simple_manner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_simple_manner_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"/>

                    <RadioButton
                        android:id="@+id/rb_simple_manner_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_safety_measures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Did the engineer explained about the safety measures and Boonbox toll free number?"/>

                <RadioGroup
                    android:id="@+id/rg_safety_measures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_safety_measures_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"/>

                    <RadioButton
                        android:id="@+id/rb_safety_measures_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tv_pleasing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Did the engineer explained in a pleasing and soft manner?"/>

                <RadioGroup
                    android:id="@+id/rg_pleasing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_pleasing_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"/>

                    <RadioButton
                        android:id="@+id/rb_pleasing_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/sign_border">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_dark"
                android:id="@+id/iv_sign"
                android:text="qwerty"
                android:textStyle="bold"
                android:textSize="@dimen/pro_txt_size"
                android:textColor="@color/bg_white"/>
        <TextView
            android:id="@+id/tv_pls_sign_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Sign Here"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/pro_txt_size"
            android:textColor="@color/black"/>
    </FrameLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="8dp"/>
            <Button
                android:layout_width="match_parent"
                android:background="@color/call"
                android:id="@+id/bt_post_service"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textSize="@dimen/pro_txt_size"
                android:enabled="false"
                android:alpha="0.5"
                android:textColor="@color/bg_white"
                android:layout_height="match_parent"/>
</LinearLayout>
