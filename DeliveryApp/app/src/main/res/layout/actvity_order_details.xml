<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ord_padding"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/ord_padding_bottom">

                <TextView
                    android:id="@+id/tv_deliveryType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ord_title_margin"
                    android:textStyle="bold"
                    android:text="@string/ord_title"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/ord_txt_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/ord_pad_bottom">

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000453671"
                    android:textStyle="bold"
                    android:textSize="@dimen/ord_txt_size"
                    android:textColor="@color/textblack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/ord_txt_size"
                    android:textColor="@color/bg_white"
                    android:paddingLeft="@dimen/ord_padding_left"/>
                <TextView
                    android:id="@+id/tv_shipping_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1119896245"
                    android:textStyle="bold"
                    android:textSize="@dimen/ord_txt_size"
                    android:textColor="@color/textblack"
                    android:paddingLeft="@dimen/ord_padding_left"/>
            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >
            <!--Left Half-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:orientation="vertical"
                android:layout_weight=".1" >

                <!--Order Number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_call_image_height"
                    android:orientation="horizontal"
                    android:background="@drawable/order_bg">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/ord_number"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:gravity="center|left"
                                android:textSize="@dimen/ord_txt_size"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight=".1" >

                            <TextView
                                android:id="@+id/tv_orderId"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="000ABC785 "
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:gravity="center|left"
                                android:textSize="@dimen/ord_txt_size"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="@color/bg_white"/>
                <!--Customer Number-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_call_image_height"
                    android:orientation="horizontal"
                    android:background="@drawable/order_bg">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/ord_cus_number"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:gravity="center|left"
                                android:textSize="@dimen/ord_txt_size"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight=".1" >

                            <TextView
                                android:id="@+id/tv_customer_name"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center|left"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:text="Mrs. Jane Doe "
                                android:textColor="@color/bg_white"
                                android:textSize="@dimen/ord_txt_size" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="@color/bg_white"/>
                <!--Delivery Date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_call_image_height"
                    android:orientation="horizontal"
                    android:background="@drawable/order_bg">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/ord_del_date"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:gravity="center|left"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:id="@+id/tv_deliveryDate"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="22-12-2017 "
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:gravity="center|left"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="@color/bg_white"/>

                <!--Shipping Address-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/order_bg">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:layout_weight=".1" >

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center|left"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:text="@string/ord_ship_add"
                                android:textColor="@color/bg_white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:id="@+id/tv_shippingAddress"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textStyle="bold"
                                android:text="Luz Avenue No 4 Mylapore Chennai 600004"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:gravity="center|left"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="@color/bg_white"/>
                <!--Shipping City-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_call_image_height"
                    android:orientation="horizontal"
                    android:background="@drawable/order_bg">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="@string/ord_ship_city"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:gravity="center|left"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight=".1" >
                            <TextView
                                android:id="@+id/tv_shippingCity"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text=" Mylapore Chennai "
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:gravity="center|left"
                                android:textStyle="bold"
                                android:textColor="@color/bg_white"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="#fff"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:id="@+id/lay_del"
           android:layout_alignParentBottom="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_gravity="bottom"
           android:orientation="vertical"
           android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/ll_delivered"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/ord_un_de_hegiht"
                            android:layout_gravity="top"
                            android:orientation="vertical"
                            android:layout_weight=".1"
                            android:background="@drawable/order_button">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:textSize="@dimen/ord_txt_size"
                                android:text="@string/ord_delivery"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <!--<LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:layout_weight=".1"
                            android:background="@drawable/order_button">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="PARTIAL DELIVERY"
                                android:paddingLeft="20dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="25sp" />
                        </LinearLayout>-->
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="#fff"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_undelivered"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/ord_un_de_hegiht"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight=".1"
                        android:background="@drawable/order_button">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="@string/ord_un_delivery"
                            android:textStyle="bold"
                            android:paddingLeft="@dimen/ord_padding_left"
                            android:textSize="@dimen/ord_txt_size"
                            android:gravity="center"
                            android:textColor="#fff" />

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_view_height"
                    android:background="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ord_call_image_height"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/ll_call_user"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight=".1"
                            android:background="@drawable/order_button">

                            <ImageView
                                android:layout_width="@dimen/ord_call_image_width"
                                android:layout_height="@dimen/ord_call_image_heigh"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:src="@drawable/contact"
                                android:textColor="#fff"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/ord_view_height"
                            android:background="#fff"
                            android:layout_height="wrap_content">
                        </View>
                        <LinearLayout
                            android:id="@+id/ll_location"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight=".1"
                            android:background="@drawable/order_button">
                            <ImageView
                                android:layout_width="@dimen/ord_call_image_width"
                                android:layout_height="@dimen/ord_call_image_heigh"
                                android:paddingLeft="@dimen/ord_padding_left"
                                android:src="@drawable/location"
                                android:gravity="center"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>
</LinearLayout>
